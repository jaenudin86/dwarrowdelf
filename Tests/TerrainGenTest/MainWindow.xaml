<Window x:Class="TerrainGenTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="800" Width="800">
    <Canvas>
        <Image Name="image" Stretch="Uniform" SnapsToDevicePixels="True" UseLayoutRounding="True" HorizontalAlignment="Center" VerticalAlignment="Center"
               Canvas.Left="0" Canvas.Top="0"/>
        <UniformGrid Columns="2">
            <GroupBox Header="Zoom" Background="White">
                <StackPanel Orientation="Horizontal">
                    <Slider Name="slider1" Width="100"
                            Minimum="1" Maximum="16" Interval="1" TickFrequency="1" IsSnapToTickEnabled="True"
                            ValueChanged="slider1_ValueChanged" />
                    <TextBox Width="50" Text="{Binding Value, ElementName=slider1}" />
                </StackPanel>
            </GroupBox>

            <GroupBox Header="H" Background="White">
                <StackPanel Orientation="Horizontal">
                    <Slider Name="slider2" Width="300"
                            Minimum="0" Maximum="2" ValueChanged="slider2_ValueChanged" Value="1.0" />
                    <TextBox Width="50" Text="{Binding Value, ElementName=slider2}" />
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Range" Background="White">
                <StackPanel Orientation="Horizontal">
                    <Slider Name="slider3" Width="300"
                            Minimum="0" Maximum="20" ValueChanged="slider2_ValueChanged" Value="5.0" />
                    <TextBox Width="50" Text="{Binding Value, ElementName=slider3}" />
                </StackPanel>
            </GroupBox>

            <TextBox IsReadOnly="True" Name="timeTextBox" />

            <GroupBox Header="Min">
                <TextBox IsReadOnly="True" Name="minTextBox" />
            </GroupBox>

            <GroupBox Header="Max">
                <TextBox IsReadOnly="True" Name="maxTextBox" />
            </GroupBox>

        </UniformGrid>
    </Canvas>
</Window>
