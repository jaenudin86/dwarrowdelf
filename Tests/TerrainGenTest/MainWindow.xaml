<Window x:Class="TerrainGenTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="1024" Width="1280">
    <Canvas>
        <Image Name="image" Stretch="Uniform" SnapsToDevicePixels="True" UseLayoutRounding="True" HorizontalAlignment="Center" VerticalAlignment="Center"
               Canvas.Left="0" Canvas.Top="0"/>
        <GroupBox Header="Zoom" Height="62" HorizontalAlignment="Left" Margin="12,12,0,0" Name="groupBox1"
                VerticalAlignment="Top" Width="197" Background="White">
            <Grid>
                <Slider Height="23" HorizontalAlignment="Left" Margin="6,6,0,0" Name="slider1" VerticalAlignment="Top"
                        Width="100" Minimum="1" Maximum="16" Interval="1" TickFrequency="1" IsSnapToTickEnabled="True"
                        ValueChanged="slider1_ValueChanged" />
                <TextBox Height="23" HorizontalAlignment="Left" Margin="112,6,0,0" Name="textBox1"
                        VerticalAlignment="Top" Width="56" Text="{Binding Value, ElementName=slider1}" />
            </Grid>
        </GroupBox>
    </Canvas>
</Window>
