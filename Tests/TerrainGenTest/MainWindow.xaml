<Window x:Class="TerrainGenTest.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="MainWindow" UseLayoutRounding="True"
		Name="root"
		mc:Ignorable="d"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		d:DesignHeight="378" d:DesignWidth="805"
		WindowStartupLocation="CenterScreen">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
		</Grid.ColumnDefinitions>

		<GroupBox Header="Surface" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2">
			<Grid>
				<ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
					<Image Name="surfaceImage" Stretch="Uniform" Source="{Binding SurfaceBmp, ElementName=root}"
						   RenderOptions.BitmapScalingMode="NearestNeighbor" />
				</ScrollViewer>

				<Slider Name="surfaceZoomSlider" Orientation="Vertical" Height="75" Margin="4"
							HorizontalAlignment="Left" VerticalAlignment="Top"
							IsDirectionReversed="True"
							Minimum="1" Maximum="4" Interval="1" TickFrequency="1" IsSnapToTickEnabled="True"
							ValueChanged="zoomSlider_ValueChanged" />
			</Grid>
		</GroupBox>

		<GroupBox Header="Slice" Grid.Column="2" Grid.Row="3" Grid.ColumnSpan="2">
			<Grid>
				<ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
					<Image Name="sliceImage" Stretch="Uniform" Source="{Binding SliceBmp, ElementName=root}"
						   RenderOptions.BitmapScalingMode="NearestNeighbor" />
				</ScrollViewer>

				<StackPanel Orientation="Vertical"  VerticalAlignment="Top" HorizontalAlignment="Left">
					<Slider Name="sliceZoomSlider" Orientation="Vertical" Height="75" HorizontalAlignment="Center"
							IsDirectionReversed="True" Margin="4"
							Minimum="1" Maximum="4" Interval="1" TickFrequency="1" IsSnapToTickEnabled="True"
							ValueChanged="sliceZoomSlider_ValueChanged" />

					<StackPanel Orientation="Vertical" Margin="4">
						<RadioButton Content="XY" IsChecked="True" />
						<RadioButton Content="XZ" />
						<RadioButton Content="YZ" />
					</StackPanel>
				</StackPanel>

				<Slider Name="levelSlider" Orientation="Vertical" Height="150"
						HorizontalAlignment="Right" VerticalAlignment="Top"
							Margin="40,4"
							Minimum="0" Maximum="19" Interval="1" TickFrequency="1" IsSnapToTickEnabled="True"
						Value="10"
							ValueChanged="levelSlider_ValueChanged" />
			</Grid>
		</GroupBox>


		<GroupBox Header="Seed" Grid.Column="0" Grid.Row="0">
			<TextBox Name="seedTextBox" Text="1" TextChanged="seedTextBox_TextChanged"  />
		</GroupBox>

		<GroupBox Header="H" Grid.Column="1" Grid.Row="0">
			<DockPanel LastChildFill="True">
				<TextBox DockPanel.Dock="Right" Width="50" Text="{Binding Value, ElementName=hSlider}" />
				<Slider Name="hSlider" Minimum="0" Maximum="2" ValueChanged="hSlider_ValueChanged" Value="0.75" />
			</DockPanel>
		</GroupBox>

		<GroupBox Header="Range" Grid.Column="2" Grid.Row="0">
			<DockPanel LastChildFill="True">
				<TextBox DockPanel.Dock="Right" Width="50" Text="{Binding Value, ElementName=rangeSlider}" />
				<Slider Name="rangeSlider"
							Minimum="0" Maximum="100" ValueChanged="rangeSlider_ValueChanged" Value="5.0" />
			</DockPanel>
		</GroupBox>

		<GroupBox Header="Avg" Grid.Column="0" Grid.Row="1">
			<TextBox IsReadOnly="True" Name="avgTextBox" />
		</GroupBox>

		<GroupBox Header="Amplify" Grid.Column="1" Grid.Row="1">
			<TextBox Name="amplifyTextBox" Text="2" TextChanged="cornerTextBox_TextChanged" />
		</GroupBox>

		<GroupBox Header="Max" Grid.Column="2" Grid.Row="1">
			<TextBox IsReadOnly="True" Name="maxTextBox" />
		</GroupBox>

		<GroupBox Header="Corners" Grid.Column="3" Grid.Row="0" Grid.RowSpan="2">
			<UniformGrid Margin="2">
				<TextBox Text="10" Name="cornerSWTextBox" TextChanged="cornerTextBox_TextChanged" />
				<TextBox Text="10" Name="cornerSETextBox" TextChanged="cornerTextBox_TextChanged" />
				<TextBox Text="10" Name="cornerNWTextBox" TextChanged="cornerTextBox_TextChanged" />
				<TextBox Text="15" Name="cornerNETextBox" TextChanged="cornerTextBox_TextChanged" />
			</UniformGrid>
		</GroupBox>

	</Grid>
</Window>
