<Window x:Class="TerrainGenTest.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="MainWindow" UseLayoutRounding="True"
		Name="root"
		mc:Ignorable="d"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		d:DesignHeight="471" d:DesignWidth="725"
		SizeToContent="WidthAndHeight"
		WindowStartupLocation="CenterScreen">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
		</Grid.ColumnDefinitions>

		<Image Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="3" Name="image" Stretch="Uniform" Source="{Binding Bmp, ElementName=root}"
			   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4" RenderOptions.BitmapScalingMode="NearestNeighbor" />

		<GroupBox Header="Zoom" Grid.Column="0" Grid.Row="0">
			<DockPanel LastChildFill="True">
				<TextBox DockPanel.Dock="Right" Width="50" Text="{Binding Value, ElementName=zoomSlider}" />
				<Slider Name="zoomSlider"
							Minimum="1" Maximum="16" Interval="1" TickFrequency="1" IsSnapToTickEnabled="True"
							ValueChanged="zoomSlider_ValueChanged" />
			</DockPanel>
		</GroupBox>

		<GroupBox Header="H" Grid.Column="1" Grid.Row="0">
			<DockPanel LastChildFill="True">
				<TextBox DockPanel.Dock="Right" Width="50" Text="{Binding Value, ElementName=hSlider}" />
				<Slider Name="hSlider" Minimum="0" Maximum="2" ValueChanged="hSlider_ValueChanged" Value="0.75" />
			</DockPanel>
		</GroupBox>

		<GroupBox Header="Range" Grid.Column="2" Grid.Row="0">
			<DockPanel LastChildFill="True">
				<TextBox DockPanel.Dock="Right" Width="50" Text="{Binding Value, ElementName=rangeSlider}" />
				<Slider Name="rangeSlider"
							Minimum="0" Maximum="100" ValueChanged="rangeSlider_ValueChanged" Value="5.0" />
			</DockPanel>
		</GroupBox>

		<GroupBox Header="Avg" Grid.Column="0" Grid.Row="1">
			<TextBox IsReadOnly="True" Name="avgTextBox" />
		</GroupBox>

		<GroupBox Header="Min" Grid.Column="1" Grid.Row="1">
			<TextBox IsReadOnly="True" Name="minTextBox" />
		</GroupBox>

		<GroupBox Header="Max" Grid.Column="2" Grid.Row="1">
			<TextBox IsReadOnly="True" Name="maxTextBox" />
		</GroupBox>

		<GroupBox Header="Corners" Grid.Column="0" Grid.Row="2">
			<UniformGrid Margin="2">
				<TextBox Text="10" Name="cornerNWTextBox" TextChanged="cornerTextBox_TextChanged" />
				<TextBox Text="10" Name="cornerNETextBox" TextChanged="cornerTextBox_TextChanged" />
				<TextBox Text="10" Name="cornerSWTextBox" TextChanged="cornerTextBox_TextChanged" />
				<TextBox Text="10" Name="cornerSETextBox" TextChanged="cornerTextBox_TextChanged" />
			</UniformGrid>
		</GroupBox>

		<GroupBox Header="Seed" Grid.Column="1" Grid.Row="2">
			<TextBox Name="seedTextBox" Text="1" TextChanged="seedTextBox_TextChanged"  />
		</GroupBox>
	</Grid>
</Window>
