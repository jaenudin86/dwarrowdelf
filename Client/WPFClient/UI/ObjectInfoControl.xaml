<UserControl x:Class="Dwarrowdelf.Client.ObjectInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dwarrowdelf.Client"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
   
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type local:ClientGameObject}">
            <local:ItemInfoControl />
        </DataTemplate>

        <DataTemplate DataType="{x:Type local:Living}">
            <local:LivingInfoControl />
        </DataTemplate>
    </UserControl.Resources>

    <Label Content="{Binding}" />
</UserControl>
