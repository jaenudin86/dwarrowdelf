<UserControl x:Class="Dwarrowdelf.Client.ItemInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Vertical">

        <Image Source="{Binding Drawing}" Stretch="Uniform" Width="64" Height="64" />

        <Separator />

        <UniformGrid Columns="2">
            <TextBlock>Name</TextBlock>
            <TextBlock Text="{Binding Name}" />

            <TextBlock>Color</TextBlock>
            <TextBlock Text="{Binding GameColor}" />

            <TextBlock>Material</TextBlock>
            <TextBlock Text="{Binding Material.Name}" />

            <TextBlock>ObjectID</TextBlock>
            <TextBlock Text="{Binding ObjectID}" />

            <TextBlock>Parent</TextBlock>
            <TextBlock Text="{Binding Parent}" />

            <TextBlock>Location</TextBlock>
            <TextBlock Text="{Binding Location}" />

            <TextBlock>Nutritional Value</TextBlock>
            <TextBlock Text="{Binding NutritionalValue}" />

            <TextBlock>Refreshment Value</TextBlock>
            <TextBlock Text="{Binding RefreshmentValue}" />
        </UniformGrid>
    </StackPanel>
</UserControl>
