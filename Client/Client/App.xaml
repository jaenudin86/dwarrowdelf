<Application
	x:Class="Dwarrowdelf.Client.App"
	x:ClassModifier="internal"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	StartupUri="UI/MainWindow/MainWindow.xaml"
	ShutdownMode="OnMainWindowClose"
	xmlns:ui="clr-namespace:Dwarrowdelf.Client.UI">

	<Application.Resources>
		<BooleanToVisibilityConverter x:Key="boolToVisConverter" />

		<ui:ObjectIDConverter x:Key="objectIDConverter"/>
		<ui:CapitalizeConverter x:Key="capitalizeConverter" />

		<ui:SymbolAndColorToDrawingConverter x:Key="symbolAndColorDrawingConverter"/>

		<DrawingImage x:Key="objectDrawingImage" x:Shared="False">
			<DrawingImage.Drawing>
				<MultiBinding Converter="{StaticResource symbolAndColorDrawingConverter}">
					<Binding Path="SymbolID" />
					<Binding Path="EffectiveColor" />
				</MultiBinding>
			</DrawingImage.Drawing>
		</DrawingImage>

		<ui:ItemIDAndMaterialIDToDrawingConverter x:Key="itemAndMaterialDrawingConverter"/>

		<DrawingImage x:Key="buildableItemDrawingImage" x:Shared="False">
			<DrawingImage.Drawing>
				<MultiBinding Converter="{StaticResource itemAndMaterialDrawingConverter}">
					<Binding Path="ItemID" />
					<Binding Path="MaterialID" />
				</MultiBinding>
			</DrawingImage.Drawing>
		</DrawingImage>

	</Application.Resources>
</Application>
