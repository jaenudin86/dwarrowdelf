<Window x:Class="Dwarrowdelf.Client.UI.ConstructBuildingDialog"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		x:ClassModifier="internal"
		Title="Construct Building"
		SizeToContent="WidthAndHeight"
		WindowStartupLocation="CenterOwner"
		WindowStyle="SingleBorderWindow"
		ShowInTaskbar="False"
		ResizeMode="NoResize" mc:Ignorable="d" 
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
		d:DesignHeight="324" d:DesignWidth="242">

	<Grid>

		<GroupBox Header="Building Type" Margin="12,12,12,41">
			<ItemsControl Name="buildingItemsControl" >
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<Button Content="{Binding}" Margin="2" Click="Button_Click" />
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</GroupBox>

		<Button Content="Cancel" IsCancel="True" Focusable="False" Margin="0,0,12,12" Width="75" Height="23" HorizontalAlignment="Right" VerticalAlignment="Bottom" />
	</Grid>

</Window>
