<Window x:Class="Dwarrowdelf.Client.UI.InstallFurnitureDialog"
		x:ClassModifier="internal"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="InstallFurnitureDialog" Height="408" Width="280">
	<Window.Resources>
		<CollectionViewSource Source="{Binding Inventory}" x:Key="filterItemsCvs" Filter="FilterItems" />
	</Window.Resources>

	<Grid>
		<ListBox x:Name="listBox" ItemsSource="{Binding Source={StaticResource filterItemsCvs}}" HorizontalContentAlignment="Stretch"  ScrollViewer.HorizontalScrollBarVisibility="Disabled" Margin="12,12,12,41">
			<ListBox.Resources>
				<ResourceDictionary Source="/UI/ListItemInfoTemplateDictionary.xaml" />
			</ListBox.Resources>
		</ListBox>
		<Button Content="Cancel" IsCancel="True" Height="23" Width="75" Margin="0,0,12,12" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" />
		<Button Content="Ok" IsDefault="True" Height="23" Width="75" Click="Ok_Button_Click" Margin="0,0,93,12" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" />
	</Grid>
</Window>
