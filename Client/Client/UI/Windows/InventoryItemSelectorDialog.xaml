<Window x:Class="Dwarrowdelf.Client.UI.InventoryItemSelectorDialog"
		x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InventoryItemSelectorDialog" Height="300" Width="300"
		FocusManager.FocusedElement="{Binding ElementName=invList}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="203*"/>
            <RowDefinition Height="67*"/>
        </Grid.RowDefinitions>
        <ListBox Name="invList" ItemsSource="{Binding Inventory}" HorizontalContentAlignment="Stretch" 
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" Margin="31,10,23,22"
                 SelectionChanged="invList_SelectionChanged"
                 >
            <ListBox.Resources>
                <ResourceDictionary Source="/Dwarrowdelf.Client;component/UI/ListItemInfoTemplateDictionary.xaml" />
            </ListBox.Resources>
        </ListBox>

        <Button Name="okButton" Content="Ok" Margin="0,0,90,10" Grid.Row="1" IsEnabled="False"
                IsDefault="True" Click="OkButton_Click" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>
        <Button Content="Cancel" HorizontalAlignment="Right" Margin="0,0,10,10" Grid.Row="1" VerticalAlignment="Bottom" Width="75"
                IsCancel="True"/>
    </Grid>
</Window>
