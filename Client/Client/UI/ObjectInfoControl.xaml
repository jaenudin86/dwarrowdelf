<ContentControl x:Class="Dwarrowdelf.Client.UI.ObjectInfoControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:Dwarrowdelf.Client"
			 xmlns:ui="clr-namespace:Dwarrowdelf.Client.UI"
			 mc:Ignorable="d"
			 d:DesignHeight="300" d:DesignWidth="300"
			 Content="{Binding}">

	<ContentControl.Resources>
		<DataTemplate DataType="{x:Type local:ItemObject}">
			<ui:ItemInfoControl />
		</DataTemplate>

		<DataTemplate DataType="{x:Type local:Living}">
			<ui:LivingInfoControl />
		</DataTemplate>

		<DataTemplate DataType="{x:Type local:BuildingObject}">
			<ui:BuildingInfoControl />
		</DataTemplate>
	</ContentControl.Resources>
</ContentControl>
