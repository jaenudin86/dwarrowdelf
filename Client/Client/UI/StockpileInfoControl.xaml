<UserControl x:Class="Dwarrowdelf.Client.UI.StockpileInfoControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:ui="clr-namespace:Dwarrowdelf.Client.UI">
	<UserControl.Resources>
		<ui:CapitalizeConverter x:Key="converter" />
	</UserControl.Resources>

	<DockPanel>
		<UniformGrid DockPanel.Dock="Top" Columns="2">
			<TextBlock>Area</TextBlock>
			<TextBlock Text="{Binding Area}" />
		</UniformGrid>

		<GroupBox Header="Stockpiled types">
			<ListBox>
			</ListBox>
		</GroupBox>
	</DockPanel>
</UserControl>
