<UserControl x:Class="Dwarrowdelf.Client.UI.TileToolTipControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 mc:Ignorable="d" 
			 d:DesignHeight="300" d:DesignWidth="300" Background="Transparent">
	<StackPanel Orientation="Vertical" Margin="2">
		<Grid x:Name="elementBox" DataContext="{Binding AreaElement}">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="1*" />
			</Grid.ColumnDefinitions>

			<Grid.RowDefinitions>
				<RowDefinition />
			</Grid.RowDefinitions>

			<Image Grid.Column="0" Stretch="Uniform" Height="24" Margin="4,0" VerticalAlignment="Center" Source="{StaticResource objectDrawingImage}" />

			<TextBlock Grid.Column="1" VerticalAlignment="Center" Text="{Binding Description, Converter={StaticResource capitalizeConverter}}" />
		</Grid>



		<Separator x:Name="separator" />

		<ItemsControl x:Name="objectBox" ItemsSource="{Binding Objects}" HorizontalContentAlignment="Stretch">
			<ItemsControl.Resources>
				<ResourceDictionary Source="/UI/ListItemInfoTemplateDictionary.xaml" />
			</ItemsControl.Resources>
		</ItemsControl>
	</StackPanel>
</UserControl>
