<UserControl x:Class="Dwarrowdelf.Client.UI.TileToolTipControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 mc:Ignorable="d" 
			 d:DesignHeight="300" d:DesignWidth="300" Background="White">
	<StackPanel Orientation="Vertical" Margin="2">
		<TextBlock x:Name="elementBox" Text="{Binding MapElement.Description}" HorizontalAlignment="Center" />

		<Separator x:Name="separator" />

		<ListBox x:Name="objectBox" ItemsSource="{Binding Objects}" HorizontalContentAlignment="Stretch" 
				 ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled"
				 BorderThickness="0">
			<ListBox.Resources>
				<ResourceDictionary Source="/UI/ListItemInfoTemplateDictionary.xaml" />
			</ListBox.Resources>
		</ListBox>
	</StackPanel>
</UserControl>
