<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:local="clr-namespace:Dwarrowdelf.Client"
					xmlns:ui="clr-namespace:Dwarrowdelf.Client.UI"
					x:Class="Dwarrowdelf.Client.UI.TreeViewTemplateDictionary">

	<ContextMenu x:Key="objectMenu">
		<MenuItem Header="Go to" Tag="Goto" Click="MenuItem_Click" />
		<MenuItem Header="Info..." Tag="Info" Click="MenuItem_Click" />
	</ContextMenu>

	<!-- BaseObject -->
	<DataTemplate DataType="{x:Type local:BaseObject}">
		<TextBlock>
			<TextBlock.Text>
				<MultiBinding StringFormat="{}{0} ({1})">
					<Binding Path="ObjectID.ObjectType" />
					<Binding Path="ObjectID" Converter="{StaticResource objectIDConverter}" />
				</MultiBinding>
			</TextBlock.Text>
		</TextBlock>
	</DataTemplate>

	<!-- Container Object -->
	<HierarchicalDataTemplate DataType="{x:Type local:ContainerObject}" ItemsSource="{Binding Inventory}">
		<TextBlock>
			<TextBlock.Text>
				<MultiBinding StringFormat="{}{0} ({1})">
					<Binding Path="ObjectID.ObjectType" />
					<Binding Path="ObjectID" Converter="{StaticResource objectIDConverter}" />
				</MultiBinding>
			</TextBlock.Text>
		</TextBlock>
	</HierarchicalDataTemplate>

	<!-- Concete Object -->
	<HierarchicalDataTemplate DataType="{x:Type local:ConcreteObject}" ItemsSource="{Binding Inventory}">
		<Grid ContextMenu="{StaticResource objectMenu}">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="1*" />
			</Grid.ColumnDefinitions>

			<Grid.RowDefinitions>
				<RowDefinition />
			</Grid.RowDefinitions>

			<Image Grid.Column="0" Stretch="Uniform" Height="24" Margin="4,0" VerticalAlignment="Center" Source="{StaticResource objectDrawingImage}" />

			<TextBlock Grid.Column="1" VerticalAlignment="Center">
				<TextBlock.Text>
					<MultiBinding StringFormat="{}{0} ({1})">
						<Binding Path="Description" Converter="{StaticResource capitalizeConverter}" />
						<Binding Path="ObjectID" Converter="{StaticResource objectIDConverter}" />
					</MultiBinding>
				</TextBlock.Text>
			</TextBlock>

			<Grid.ToolTip>
				<ui:ObjectInfoControl />
			</Grid.ToolTip>
		</Grid>
	</HierarchicalDataTemplate>

	<!-- Living Object -->
	<HierarchicalDataTemplate DataType="{x:Type local:LivingObject}" ItemsSource="{Binding Inventory}">
		<HierarchicalDataTemplate.Resources>
			<ui:AssignmentToStringConverter x:Key="assignmentConverter"/>
		</HierarchicalDataTemplate.Resources>

		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="1*" />
			</Grid.ColumnDefinitions>

			<Grid.RowDefinitions>
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
			</Grid.RowDefinitions>

			<Image Grid.Column="0" Grid.Row="0" Stretch="Uniform" Height="24" Margin="4,0" VerticalAlignment="Center" Source="{StaticResource objectDrawingImage}" />

			<TextBlock Grid.Column="1" Grid.Row="0" VerticalAlignment="Center">
				<TextBlock.Text>
					<MultiBinding StringFormat="{}{0} ({1})">
						<Binding Path="Description" Converter="{StaticResource capitalizeConverter}" />
						<Binding Path="ObjectID" Converter="{StaticResource objectIDConverter}" />
					</MultiBinding>
				</TextBlock.Text>
			</TextBlock>

			<TextBlock Grid.Row="1" Grid.Column="1" FontWeight="Light">
				<TextBlock.Text>
					<MultiBinding StringFormat="{}{0} ({1}/{2})">
						<Binding Path="CurrentAction" TargetNullValue="No action" />
						<Binding Path="ActionTicksUsed" />
						<Binding Path="ActionTotalTicks" />
					</MultiBinding>
				</TextBlock.Text>
			</TextBlock>

			<TextBlock Grid.Row="2" Grid.Column="1" FontWeight="ExtraLight">
				<TextBlock.Text>
					<Binding Path="PreviousAction" TargetNullValue="No action" />
				</TextBlock.Text>
			</TextBlock>

			<TextBlock Grid.Row="3" Grid.Column="1" FontWeight="Light">
				<TextBlock.Text>
					<MultiBinding Converter="{StaticResource assignmentConverter}">
						<Binding Path="ClientAssignment" />
						<Binding Path="ServerAssignment" />
					</MultiBinding>
				</TextBlock.Text>
			</TextBlock>

			<Grid.ContextMenu>
				<ContextMenu>
					<MenuItem Header="Go to" Tag="Goto" Click="MenuItem_Click" />
					<MenuItem Header="Info..." Tag="Info" Click="MenuItem_Click" />
					<MenuItem Header="Control..." Tag="Control" Click="MenuItem_Click" IsEnabled="{Binding IsControllable}" />
				</ContextMenu>
			</Grid.ContextMenu>

			<Grid.ToolTip>
				<ui:ObjectInfoControl />
			</Grid.ToolTip>
		</Grid>
	</HierarchicalDataTemplate>
</ResourceDictionary>